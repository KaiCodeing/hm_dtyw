<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/check_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/check_anzhuang_on"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/number_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="订单号： 12345626645"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_8"/>
        <TextView
            android:id="@+id/shouhuo_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货状态"
            android:textSize="@dimen/textsize_8"/>
    </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p">

    </View>
  <LinearLayout
      android:id="@+id/pop_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingBottom="10dp"
      android:paddingTop="10dp"
      android:paddingRight="15dp"
      android:paddingLeft="15dp">
        <ImageView
            android:id="@+id/iamge1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>
      <ImageView
          android:id="@+id/iamge2"
          android:layout_width="80dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_height="80dp"
          android:scaleType="centerCrop"/>
      <ImageView
          android:id="@+id/iamge3"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/look_sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|right">
            <TextView
                android:id="@+id/all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共5件"
                android:textColor="#242424"
                android:textSize="@dimen/textsize_8"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:drawableRight="@mipmap/sanjiao_name"
                android:drawablePadding="5dp"
                android:textSize="@dimen/textsize_8"/>
        </LinearLayout>
  </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p">
        </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款: ¥"
            android:textSize="@dimen/textsize_8"/>
        <TextView
            android:id="@+id/money_text"
            android:layout_width="0dp"

            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#F24949"
            android:textSize="@dimen/textsize_7"
            android:text="235"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/delete_dj"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/title_backgroid"
            android:text="删除订单"
            android:maxLines="1"
            android:gravity="center"
            android:background="@drawable/add_car_on"/>


        <TextView
            android:id="@+id/go_pj_dj"
            android:layout_width="90dp"
            android:layout_height="34dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:text="去付款"

            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/title_backgroid"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_p"/>
    </LinearLayout>
</LinearLayout>