<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/select_city_layout"
       android:layout_width="match_parent"
        android:orientation="horizontal"
       android:layout_height="wrap_content"
       android:paddingTop="15dp"
       android:paddingBottom="15dp"
       android:background="@color/white"
       android:layout_marginBottom="2dp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="选择地区"
           android:textSize="@dimen/textsize_8"
           android:textColor="#272727"
           android:layout_marginLeft="15dp"/>
       <View
           android:layout_width="0dp"
           android:layout_height="1dp"
           android:layout_weight="1"></View>
       <TextView
           android:id="@+id/city_name_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="山东省济南市高新区"
           android:textColor="#272727"
           android:textSize="@dimen/textsize_7"
           android:drawableRight="@mipmap/sanjiao_name"
           android:drawablePadding="25dp"
           android:layout_marginRight="20dp"/>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        >
        <ImageView
            android:id="@+id/check_anzhuang"
            android:layout_width="wrap_content"
            android:src="@mipmap/check_anzhuang_on"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp">
        <TextView
            android:id="@+id/fuwu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务店名称"
            android:textColor="#282828"
            android:textSize="@dimen/textsize_8"
            android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/fuwu_city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="山东济南市高新区"
                android:textColor="#878787"
                android:textSize="@dimen/textsize_7"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/fuwu_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12356236551"
                android:textColor="#282828"
                android:paddingTop="5dp"
                android:textSize="@dimen/textsize_7"
                android:paddingBottom="5dp"/>
        </LinearLayout>
<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_weight="1"></View>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/moeny_img"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/money_anzhuang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:textColor="#F3494A"
            android:textSize="@dimen/textsize_10"
            android:text="120"
            />
    </LinearLayout>

    </LinearLayout>

