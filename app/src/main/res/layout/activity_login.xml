<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F3">
    <include layout="@layout/title_base_"></include>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:background="@color/white"
       android:orientation="vertical">
    <EditText
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColorHint="#D5D5D5"
        android:drawableLeft="@mipmap/username_img"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:hint="请输入手机号"
        android:drawablePadding="10dp"
        android:background="@null"
        android:inputType="phone"
        android:textSize="@dimen/textsize_8"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#E5E5E5"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"/>
       <EditText
           android:id="@+id/password_text"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:drawableLeft="@mipmap/password_img"
           android:paddingLeft="10dp"
           android:gravity="center|left"
           android:hint="请输入6-20位密码"
           android:drawablePadding="10dp"
           android:background="@null"
           android:textColorHint="#D5D5D5"
           android:textSize="@dimen/textsize_8"
           android:maxLength="20"
           android:password="true"
           />
       </LinearLayout>
    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg_title_back"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="登录"
        android:textSize="@dimen/textsize_9"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_password"
            android:textSize="@dimen/textsize_8"
            android:layout_marginRight="25dp"
          ></TextView>

    </LinearLayout>
</LinearLayout>