<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F3"
    android:orientation="vertical">

    <include layout="@layout/title_base_"></include>

    <EditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="left|center"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="#D4D4D4"
        android:textSize="@dimen/textsize_7" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/phone_show"
        android:textColor="#F24949"
        android:text="验证码已发送到188****3625"
        android:gravity="center|left"
        android:paddingLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/yanzheng_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:paddingLeft="20dp"
            android:textSize="@dimen/textsize_7"
            android:textColorHint="#D4D4D4"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="重新发送"
                    android:textColor="#00C3B2"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="#F24949"
                    android:textSize="@dimen/textsize_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    android:textColor="#F24949"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>

            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#DAEFEC"
                android:text="获取验证码"
                android:textColor="#00C3B2"
                android:textSize="@dimen/textsize_7" />
        </FrameLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/white"
        android:gravity="left|center"
        android:hint="请设置6-20位密码"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="#D4D4D4"
        android:password="true"
        android:textSize="@dimen/textsize_7" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <CheckBox
        android:id="@+id/check_zu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/zc_check_bg"
        android:text="同意"
        android:layout_marginLeft="20dp"
        android:paddingLeft="5dp"
        android:textColor="#636363"/>
    <TextView
        android:id="@+id/xieyi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00C3B2"
        android:text="注册协议"
      />

</LinearLayout>
    <TextView
        android:id="@+id/yes_button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/title_backgroid"
        android:text="确定"
        android:gravity="center"
        android:textSize="@dimen/textsize_8"
        android:textColor="@color/white"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"/>
</LinearLayout>