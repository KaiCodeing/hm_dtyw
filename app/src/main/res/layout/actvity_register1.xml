<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_base_"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.hemaapp.hm_FrameWork.view.RoundedImageView
            android:id="@+id/username_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@mipmap/user_img"
            android:padding="0.5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="头像"
            android:textSize="@dimen/textsize_8" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"></View>

    <LinearLayout
        android:id="@+id/nickname_layout"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="#7A7979"
            android:textSize="@dimen/textsize_8" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:drawablePadding="15dp"
            android:maxLength="20"
            android:drawableRight="@mipmap/sanjiao_name"
            android:gravity="center|right"
            android:hint="请输入昵称"
            android:textSize="@dimen/textsize_8" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"></View>

    <LinearLayout
        android:id="@+id/city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="所在城市"
            android:textColor="#7A7979"
            android:textSize="@dimen/textsize_8" />


        <TextView
            android:id="@+id/city_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/sanjiao_name"
            android:gravity="right"
            android:hint="请选择地址"
            android:textSize="@dimen/textsize_8" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/white_p"></View>
</LinearLayout>