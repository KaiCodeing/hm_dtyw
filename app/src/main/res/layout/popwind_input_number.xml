<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:id="@+id/pop_light_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_left_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical" >
        <EditText
            android:id="@+id/kuaidi_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="输入快递名称"
            android:textSize="@dimen/textsize_10"
            android:gravity="center"
            android:singleLine="true"
            android:background="@null"
            android:textColorHint="#B7B7B7"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white_p"/>
            <EditText
                android:id="@+id/kuaidi_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入快递单号"
                android:textSize="@dimen/textsize_10"
                android:gravity="center"
                android:singleLine="true"
                android:textColorHint="#B7B7B7"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DCDCDC"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/close_pop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:visibility="gone"
                android:textColor="#A2A2A2"
                android:textSize="@dimen/textsize_7"
                android:gravity="center"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#DCDCDC"/>
            <TextView
                android:id="@+id/yas_pop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="@color/title_backgroid"
                android:textSize="@dimen/textsize_10"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>