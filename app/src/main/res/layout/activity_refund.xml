<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/title_base_"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/shangp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/commod_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/commod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#373737"
                android:textSize="@dimen/textsize_10"
                android:text="产品名称"/>
            <com.hemaapp.dtyw.view.FlowLayout
                android:id="@+id/flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.hemaapp.dtyw.view.FlowLayout>
            <TextView
                android:id="@+id/add_view_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_8"
                android:visibility="gone"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="236"
                    android:textColor="#F24949"
                    android:textSize="@dimen/textsize_11"
                    android:drawableLeft="@mipmap/moeny_img"
                    android:drawablePadding="3dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">

                </View>
                <TextView
                    android:id="@+id/number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/cheng_img"
                    android:textColor="#373737"
                    android:textSize="@dimen/textsize_8"
                    android:text="9"
                    android:drawablePadding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:id="@+id/anzhuang_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="安装服务"
                android:textColor="@color/backgroid_check"
                android:textSize="@dimen/textsize_9"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"/>
            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="@color/backgroid_check"></View>
            <TextView
                android:id="@+id/fuwu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务店名称"

                android:textSize="@dimen/textsize_10"
                android:textColor="@color/black"

                android:padding="10dp"/>
            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务店地址"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textsize_8"/>
            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15623698544"
                android:padding="10dp"
                android:textSize="@dimen/textsize_9"
                android:textColor="#292929"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>
        <TextView
            android:id="@+id/money_text_an"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="202"
            android:textColor="#F24949"
            android:textSize="@dimen/textsize_12"
            android:drawableLeft="@mipmap/moeny_img"
            android:gravity="bottom"
            android:paddingTop="30dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView
            android:id="@+id/commod_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="共1件商品"
            android:gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计 ¥"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/commod_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF4949"
            android:textSize="@dimen/textsize_10"
            android:text="362.3"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="@color/white_p"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退款总额"
            android:gravity="left"
            android:textColor="#282828"
            android:textSize="@dimen/textsize_8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tuikuan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF4949"
            android:textSize="@dimen/textsize_10"
            android:text="362.3"/>
    </LinearLayout>
    <EditText
        android:id="@+id/input_yijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerbg_addandsubtract_on"
        android:minHeight="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="填写退款原因"
        android:gravity="center|left|top"
        android:padding="10dp"/>
            <com.hemaapp.dtyw.view.DtywGridView
                android:id="@+id/gridview_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="4"
                android:padding="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

            </com.hemaapp.dtyw.view.DtywGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>