<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:id="@+id/vp_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hemaapp.dtyw.view.DtywViewPager
            android:id="@+id/adviewpager"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        </com.hemaapp.dtyw.view.DtywViewPager>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/commod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#373737"
                android:textSize="@dimen/textsize_8"

                android:text="商品名称"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格    ¥"/>
                <TextView
                    android:id="@+id/number_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="@dimen/textsize_9"
                    android:textColor="#F24949"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#EAEAEA"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"></View>
        <ImageView
            android:id="@+id/shoucang_img"
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent"
            android:src="@mipmap/yishoucang_img"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/xiaoliang_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="销量213"
            android:textColor="#282828"
            android:textSize="@dimen/textsize_8"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/kc_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="库存0"
            android:gravity="center"
            android:textColor="#282828"
            android:textSize="@dimen/textsize_8"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yf_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="运费: 213元"
            android:gravity="right"
            android:textColor="#878787"
            android:textSize="@dimen/textsize_8"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品规格"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:background="#EAEAEA"/>
    <LinearLayout
        android:id="@+id/add_guige_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp">

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品描述"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:background="#EAEAEA"/>
        <TextView
            android:id="@+id/miaoshu_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="#7B7B7B"
            android:textSize="@dimen/textsize_8"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:lineSpacingExtra="3dp"
            android:visibility="gone"
            android:text="部件品牌: 德国高达\n适用电梯品牌：通用\n商家编号：SEC086"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingLeft="10dp"
        android:background="#EAEAEA"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"

        android:background="@color/white">
        <RadioGroup
            android:id="@+id/radiogroup_san"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@drawable/select_class"
                android:button="@null"
                android:checked="true"
                android:text="图文详情"/>
            <RadioButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@drawable/select_class"
                android:button="@null"
                android:text="安装服务"

               />
            <RadioButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:layout_height="match_parent"
                android:textColor="@drawable/select_class"

                android:text="商品评价"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/white">
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/title_backgroid"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"

                ></View>
            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/title_backgroid"
                android:layout_marginLeft="30dp"
                android:visibility="invisible"
                android:layout_marginRight="30dp"></View>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/title_backgroid"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="invisible"></View>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>