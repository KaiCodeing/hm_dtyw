<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:id="@+id/close1"
    android:orientation="vertical">

    <View
        android:id="@+id/imageway_pop_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/cornerbg_input"
        android:orientation="horizontal" >

            <TextView
                android:id="@+id/radiobutton0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/share_qq"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="QQ"

                android:textSize="@dimen/textsize_7"
                />

            <TextView
                android:id="@+id/radiobutton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/share_wechate"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="微信"

                android:textSize="@dimen/textsize_7"
                />

            <TextView
                android:id="@+id/radiobutton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/share_qone"

                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="空间"

                android:textSize="@dimen/textsize_7"
                />

            <TextView
                android:id="@+id/radiobutton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:visibility="gone"
                android:drawablePadding="2dp"
                android:drawableTop="@mipmap/share_moment"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="微博"
                android:textColor="@drawable/main_text_cehck"
                android:textSize="@dimen/textsize_7"
                />


    </LinearLayout>

    <TextView
        android:id="@+id/textView1_camera"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/bg_button_marrage"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/backgroid_check" />

</LinearLayout>