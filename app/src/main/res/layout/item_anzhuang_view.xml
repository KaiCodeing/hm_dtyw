<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/anzhuang_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安装服务"
        android:textColor="@color/backgroid_check"
        android:textSize="@dimen/textsize_9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"/>
    <View
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:background="@color/backgroid_check"></View>
    <TextView
        android:id="@+id/fuwu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务店名称"

        android:textSize="@dimen/textsize_10"
        android:textColor="@color/black"

        android:padding="10dp"/>
    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务店地址"
        android:paddingLeft="10dp"
        android:textSize="@dimen/textsize_8"/>
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15623698544"
        android:padding="10dp"
        android:textSize="@dimen/textsize_9"
        android:textColor="#292929"/>
            </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/moeny_img"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"/>
        <TextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="202"
            android:textColor="#F24949"
            android:textSize="@dimen/textsize_10"
            android:gravity="bottom"
            android:paddingTop="30dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
</LinearLayout>