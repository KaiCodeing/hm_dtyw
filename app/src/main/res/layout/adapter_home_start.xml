<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/vp_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hemaapp.dtyw.view.DtywViewPager
            android:id="@+id/adviewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"></com.hemaapp.dtyw.view.DtywViewPager>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/gonggao_img" />

        <ViewSwitcher
            android:id="@+id/index_viewSwitcher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"></ViewSwitcher>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/pinpai_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/pinpai_img" />

        <ImageView
            android:id="@+id/chanping_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/chanpin_img" />

        <ImageView
            android:id="@+id/ershou_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/ershou_img" />

        <ImageView
            android:id="@+id/pintai_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/pingtai_img" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
        <ImageView
            android:id="@+id/zhineng_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/zhineng_img" />
        <ImageView
            android:id="@+id/demand_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/demoned_all_img" />
        <ImageView
            android:id="@+id/demand_fa_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:src="@mipmap/demond_fa_img" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <RadioGroup
            android:id="@+id/radiogroup_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@drawable/select_class"
            android:button="@null"
            android:text="品牌推荐"
            android:checked="true"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#EEEEEE"></View>
            <RadioButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@drawable/select_class"
                android:button="@null"
                android:text="热销专区"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/white">
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_backgroid"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"

            ></View>
            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/title_backgroid"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:visibility="invisible"
               ></View>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>