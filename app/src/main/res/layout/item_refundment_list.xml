<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/din_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/number_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单号:"
            android:textColor="#373737"
            android:textSize="@dimen/textsize_8" />

        <TextView
            android:id="@+id/type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核状态" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shangp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:id="@+id/commod_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/commod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#373737"
                android:textSize="@dimen/textsize_8"
                android:text="产品名称"/>
            <com.hemaapp.dtyw.view.FlowLayout
                android:id="@+id/flowlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </com.hemaapp.dtyw.view.FlowLayout>
            <TextView
                android:id="@+id/add_view_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格"
                android:textSize="@dimen/textsize_8"
                android:visibility="gone"
               ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/moeny_img"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    />
                <TextView
                    android:id="@+id/money_text_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="236"
                    android:layout_gravity="center"
                    android:textColor="#F24949"
                    android:textSize="@dimen/textsize_8"

                    android:drawablePadding="3dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">

                </View>
                <TextView
                    android:id="@+id/number_text_com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/cheng_img"
                    android:textColor="#373737"
                    android:textSize="@dimen/textsize_8"
                    android:text="9"
                    android:layout_marginRight="30dp"
                    android:drawablePadding="5dp"/>
                <TextView
                    android:id="@+id/tui_two_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="退款"
                    android:textColor="@color/title_backgroid"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                     android:background="@drawable/add_car_on"
                   />
                <TextView
                    android:id="@+id/tui_ping_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="退款"
                    android:textColor="@color/white"

                    android:background="@color/title_backgroid"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:id="@+id/anzhuang_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="安装服务"
                android:textColor="@color/backgroid_check"
                android:textSize="@dimen/textsize_9"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"/>
            <View
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:background="@color/backgroid_check"></View>
            <TextView
                android:id="@+id/fuwu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务店名称"

                android:textSize="@dimen/textsize_10"
                android:textColor="@color/black"

                android:padding="10dp"/>
            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务店地址"
                android:paddingLeft="10dp"
                android:textSize="@dimen/textsize_8"/>
            <TextView
                android:id="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15623698544"
                android:padding="10dp"
                android:textSize="@dimen/textsize_9"
                android:textColor="#292929"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/moeny_img"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:id="@+id/money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="202"
            android:textColor="#F24949"
            android:textSize="@dimen/textsize_12"

            android:gravity="bottom"
            android:paddingTop="30dp"
            android:paddingRight="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_p"></View>
    <LinearLayout
        android:id="@+id/zong_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>
            <TextView
                android:id="@+id/all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_8"
                android:text="共1件商品"
                android:layout_marginRight="10dp"
                android:visibility="invisible"
                />
            <TextView
                android:text="总计"
                android:textColor="#000000"
                android:textSize="@dimen/textsize_8"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/moeny_img"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/money_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F24949"

                android:drawablePadding="5dp"
                android:gravity="bottom"
                android:textSize="@dimen/textsize_11"
                android:text="2120"/>
        </LinearLayout>
        <TextView
            android:id="@+id/contain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(含运费10元)"
            android:layout_gravity="right"
            android:textSize="@dimen/textsize_8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_p"></View>
</LinearLayout>